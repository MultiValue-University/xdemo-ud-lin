*Create files
DATA.FILES = "MEMBER-ADD1":@AM:"MEMBER-ADD2":@AM:"MEMBER-ADD3":@AM:"EMPLOYER-ADD1":@AM:"EMPLOYER-ADD2":@AM:"EMPLOYER-ADD3"

* Loop all create.file commands here and index creation
FOR DF = 1 TO DCOUNT(DATA.FILES,@AM)
CURR.FILE = DATA.FILES<DF>;GOSUB CREATE.FILE
NEXT DF
STOP

CREATE.FILE:
* Common create file code
CRT "Creating Data File ":CURR.FILE:"..."
OPENED.FILE = 1
OPEN "",CURR.FILE TO MY.FILE ELSE OPENED.FILE = 0
CLOSE MY.FILE
IF OPENED.FILE THEN
  DATA "Y"
  CMD = "DELETE.FILE ":CURR.FILE;GOSUB RUN.CMD
END
CLEARINPUT
CMD = "CREATE.FILE ":CURR.FILE:" 30";GOSUB RUN.CMD
CMD = "!chmod 777 -R *":CURR.FILE;GOSUB RUN.CMD
RETURN

RUN.CMD:
    EXECUTE CMD CAPTURING JUNK
RETURN
